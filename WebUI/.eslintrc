{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "plugin:vue/essential",
    "@vue/standard",
    "@vue/typescript"
  ],
  "parserOptions": {
    "parser": "@typescript-eslint/parser"
  },
  "rules": {
    "semi": ["error", "always"],
    "indent": ["error", 4],
    "no-multi-spaces": ["error", { "exceptions": { "VariableDeclarator": false } }],
    "space-before-function-paren": ["error", {
      "anonymous": "ignore",
      "named": "never",
      "asyncArrow": "always"
    }],
    "func-call-spacing": "off"
  }
}