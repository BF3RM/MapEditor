{
  "compileOnSave": true,
  "buildOnSave": true,
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "strictPropertyInitialization": false,
    "importHelpers": true,
    "sourceMap": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types",
      "typings"
    ],
    "types": [
      "webpack-env"
     ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "modules/*": [
        "src/modules/*"
      ]
    },
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": [
    "typings/**/*",
    "src/**/*"
  ],
  "exclude": [
    "src/script/libs/**/*",
    "src/script/**/*.js"
  ]
}
