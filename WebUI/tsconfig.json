{
  "compileOnSave": true,
  "buildOnSave": true,
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types"],
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "modules/*": [
        "src/modules/*"
      ]
    },
  },
  "include": [
    "types/**/*",
    "src/**/*"
  ]
}
